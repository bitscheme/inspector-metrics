{
  "name": "inspector-metrics",
  "description": "monitoring / metric library similar to http://metrics.dropwizard.io",
  "version": "1.8.8",
  "main": "./build/lib/metrics/index.js",
  "typings": "./build/lib/metrics/index.d.ts",
  "license": "MIT",
  "licenses": [
    {
      "type": "MIT",
      "url": "https://www.opensource.org/licenses/mit-license.php"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/rstiller/inspector-metrics"
  },
  "keywords": [
    "metrics",
    "monitoring",
    "typescript"
  ],
  "engines": {
    "node": ">= 6",
    "npm": ">= 3"
  },
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/mocha": "^5.2.4",
    "@types/node": "^10.5.2",
    "@types/sinon": "^5.0.1",
    "@types/sinon-chai": "^3.2.0",
    "chai": "^4.1.2",
    "mocha": "^5.2.0",
    "mocha-typescript": "^1.1.16",
    "npm-check": "^5.7.1",
    "nyc": "^13.0.0",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "sinon": "^6.1.3",
    "sinon-chai": "^3.2.0",
    "ts-node": "^7.0.0",
    "tslint": "^5.10.0",
    "typedoc": "^0.11.1",
    "typescript": "^2.9.2"
  },
  "dependencies": {
    "node-cint64": "^2.0.0",
    "source-map-support": "0.5.6"
  },
  "files": [
    "build",
    "lib",
    "test",
    "mocha.opts",
    "tsconfig.json",
    "tslint.json"
  ],
  "scripts": {
    "check:lint": "tslint -c tslint.json lib/**/*.ts test/**/*.ts",
    "check:coverage": "nyc npm run test:jenkins",
    "check:deps": "npm-check --ignore @types/* --no-spinner --no-emoji --no-color",
    "clean": "rimraf build coverage docs",
    "docs:prepare": "git subtree add --prefix docs/ origin gh-pages",
    "docs:generate": "typedoc --ignoreCompilerErrors --out ./docs --mode modules --gitRevision master --target ES5 --module none ./lib",
    "docs:publish": "git subtree push --prefix docs/ origin gh-pages",
    "compile": "tsc -p .",
    "build": "npm run clean && npm run compile && npm run docs:generate",
    "prepublishOnly": "npm run build",
    "test": "mocha --opts mocha.opts",
    "test:jenkins": "mocha --opts mocha.jenkins.opts"
  },
  "nyc": {
    "include": [
      "lib/*.ts",
      "lib/**/*.ts"
    ],
    "exclude": [
      "test/*"
    ],
    "extension": [
      ".ts"
    ],
    "require": [],
    "reporter": [
      "json",
      "html",
      "cobertura"
    ],
    "all": true
  }
}
