{
    "name": "inspector-monorepo",
    "version": "0.0.0",
    "private": true,
    "devDependencies": {
        "@hapi/hapi": "18.4.0",
        "@types/async": "3.0.3",
        "@types/chai": "4.2.7",
        "@types/hapi": "18.0.3",
        "@types/lodash": "4.14.149",
        "@types/mocha": "5.2.7",
        "@types/moment-timezone": "0.5.12",
        "@types/node": "12.12.21",
        "@types/sinon": "7.5.1",
        "@types/sinon-chai": "3.2.3",
        "chai": "4.2.0",
        "husky": "3.1.0",
        "js-yaml": "3.13.1",
        "lerna": "3.19.0",
        "mocha": "6.2.2",
        "mocha-typescript": "1.1.17",
        "nock": "11.7.0",
        "nyc": "14.1.1",
        "pkgsign": "0.2.0",
        "reflect-metadata": "0.1.13",
        "rimraf": "3.0.0",
        "sinon": "7.5.0",
        "sinon-chai": "3.3.0",
        "standard": "14.3.1",
        "ts-node": "8.5.4",
        "tslint": "5.20.1",
        "typescript": "3.7.4"
    },
    "scripts": {
        "bootstrap": "lerna bootstrap",
        "build": "lerna run build",
        "sign": "lerna run sign && git add packages/*/signature.json",
        "clean": "lerna run clean",
        "compile": "lerna run compile",
        "coverage": "lerna run coverage",
        "deps": "lerna run deps",
        "lint": "lerna run lint",
        "publish": "lerna publish",
        "publish-dry-run": "lerna publish --skip-npm --no-git-tag-version --no-push",
        "pretest": "lerna run compile --scope inspector-metrics",
        "publishDocs": "cd docs && git add --all . && git commit -nm 'Deploy to gh-pages' && git push origin gh-pages && cd ..",
        "prepublishDocs": "docker-compose run --rm docs",
        "test": "lerna run test"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm sign"
        }
    }
}
